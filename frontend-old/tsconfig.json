{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "DOM"],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "@types/jest"],
    "typeRoots": ["./node_modules/@types"],
    "outDir": "public/js"
  },
  "include": ["src/**/*.ts", "src/clientAnimation.js", "src/SocketClient.js"],
  "exclude": ["src/**/*.spec.ts"]
}
